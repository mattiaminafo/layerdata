  "components": {
    "buttons": {
      "primary": {
        "background": "var(--primary-purple)",
        "color": "var(--white)",
        "hover": "var(--purple-dark)",
        "padding": "0.5rem 1.5rem",
        "font-weight": 600
      },
      "secondary": {
        "background": "var(--primary-beige)",
        "color": "var(--white)",
        "hover": "var(--beige-dark)",
        "padding": "0.5rem 1.5rem",
        "font-weight": 600
      },
      "outline": {
        "border": "2px solid var(--primary-gray)",
        "color": "var(--primary-gray)",
        "background": "transparent",
        "hover-background": "var(--primary-gray)",
        "hover-color": "var(--white)",
        "padding": "0.5rem 1.5rem",
        "font-weight": 600
      }
    },
    "cards": {
      "background": "var(--white)",
      "shadow": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
      "border": "1px solid var(--gray-200)",
      "padding": "1.5rem",
      "hover-shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
    },
    "containers": {
      "max-width": "80rem",
      "padding": {
        "mobile": "0.75rem",
        "tablet": "1rem",
        "desktop": "1.5rem",
        "large": "2rem"
      }
    }
  },
  "gradients": {
    "primary": "linear-gradient(135deg, var(--primary-beige) 0%, var(--primary-purple) 100%)",
    "text": "linear-gradient(135deg, var(--primary-beige) 0%, var(--primary-purple) 100%)"
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "200ms",
      "slow": "300ms"
    },
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
  },
  "layout": {
    "max-width": "80rem",
    "section-padding": {
      "mobile": "1rem",
      "tablet": "1.5rem",
      "desktop": "2rem",
      "large": "3rem"
    }
  },
